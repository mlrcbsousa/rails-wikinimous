<!-- app/views/articles/show.html.erb -->
<h2>
  <%= @article.title %>

  <%= link_to edit_article_path(@article) do %>
    <i class="fas fa-pencil-alt"></i>
  <% end %>
  <%= link_to article_path(@article),
      method: :delete,
      data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
</h2>

<hr>

<p><%= @article.content %></p>
